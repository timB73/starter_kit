{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "truffle/globals": true,
    "mocha": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "truffle"],
  "rules": {
    "linebreak-style": "off",
    "func-names": "off"
  }
}
